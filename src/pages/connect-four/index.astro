---
import "./_styles/game.css";
import BaseLayout from "~/layouts/BaseLayout.astro";
import Game from "./_components/Game.tsx";

const id = "connect-four";
const title = "Connect Four";
const canonical = `https://games.rman.dev/${id}`;
const description = `Classic Connect Four game. Play on ${canonical}`;
const thumbnail = `/thumbnail/${id}.png`;
---

<BaseLayout {id} {title} {description} {canonical} {thumbnail}>
  <Game client:load />
</BaseLayout>
