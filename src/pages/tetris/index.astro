---
import "./_styles/game.css";
import "./_styles/tetromino.css"

import BaseLayout from "~/layouts/BaseLayout.astro";
import Game from "./_components/Game.tsx";

const id = "tetris";
const title = "Tetris Game";
const canonical = `https://games.rman.dev/${id}`;
const description = `Classic Tetris game. Play on ${canonical}`;
const thumbnail = `/thumbnails/${id}.png`;
---

<BaseLayout {id} {title} {description} {canonical} {thumbnail}>
  <Game client:load />
</BaseLayout>
