---
import "./_styles/main.css";
import "./_styles/notifications.css";
import "./_styles/statistics.css";
import "./_styles/variables.css";

import BaseLayout from "~/layouts/BaseLayout.astro";
import Game from "./_components/Game.tsx";

const id = "wordle";
const title = "Wordle - Daily and Unlimited Word Puzzle Game";
const canonical = `https://games.rman.dev/${id}`;
const description = `Challenge yourself with Wordle, the addictive daily word puzzle. Enjoy unlimited games or a new daily challenge. Play now on ${canonical}`;
const thumbnail = `/thumbnails/${id}.png`;
---

<BaseLayout {id} {title} {description} {canonical} {thumbnail}>
  <Game client:load />
</BaseLayout>
